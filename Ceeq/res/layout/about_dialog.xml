<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#cc0033"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="#f4f4f4"
        android:padding="12dp"
        android:text="Ceeq™ About"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#434343" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="126dp"
        android:layout_gravity="left"
        android:hint="About Us"
        android:padding="12dp"
        android:text="Ceeq™ application is developed for the final year project by G9 under supervision of project incharge N.K Gupta."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f4f4f4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="302dp"
        android:layout_height="78dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="All Rights Reserved © G9."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#f4f4f4" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Click outside this box to close it."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#f4f4f4" />

</LinearLayout>