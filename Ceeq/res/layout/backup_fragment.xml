<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:columnCount="1"
            android:padding="8dp" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:columnCount="1" >

                <ImageButton
                    android:id="@+id/autoBackupSettings"
                    android:layout_width="94dp"
                    android:layout_height="44dp"
                    android:layout_column="0"
                    android:layout_gravity="right|top"
                    android:layout_row="0"
                    android:onClick="showSettingsDialog"
                    android:contentDescription="@string/bAuto"
                    android:src="@drawable/ic_setting_light" />

                <TextView
                    android:id="@+id/autoBackupText"
                    android:layout_width="134dp"
                    android:layout_height="38dp"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_row="0"
                    android:gravity="center"
                    android:text="@string/bAuto"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/autoBackupToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_column="0"
                    android:layout_gravity="right|top|center"
                    android:layout_marginRight="100dp"
                    android:layout_row="0"
                    android:onClick="setAutoValues"
                    android:text="@string/bAuto"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </GridLayout>

            <Button
                android:id="@+id/getDataInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:onClick="backupFragment"
                android:text="@string/bInfo" />

            <Button
                android:id="@+id/oneClickBackup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginBottom="4dp"
                android:layout_row="3"
                android:onClick="backupFragment"
                android:text="@string/bOneClick" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" >

                <Button
                    android:id="@+id/backupData"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:onClick="backupFragment"
                    android:text="@string/tabBackup" />

                <Button
                    android:id="@+id/restoreData"
                    android:layout_width="152dp"
                    android:layout_gravity="left"
                    android:onClick="backupFragment"
                    android:shadowColor="#c3c3c3"
                    android:text="@string/bRestore" />
            </GridLayout>

            <Button
                android:id="@+id/displayBackupData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:onClick="backupFragment"
                android:text="@string/bDisplay" />

        </GridLayout>

    </ScrollView>

</LinearLayout>