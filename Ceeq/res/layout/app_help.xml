<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    android:padding="0dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="8dp" >

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#434343"
                android:padding="4dp"
                android:text="Remote Commands"
                android:textColor="#f4f4f4"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:gravity="fill"
                android:text="Remote Commands are messages which you may send in case your device is lost and when you receive the Emergency Message from the application on SIM changes."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#434343" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="0.63"
                android:text="CEEQ ME"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#434343"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.63"
                android:text="This will retreive you current mobile phone location details"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#606060" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.63"
                android:text="CEEQ ERASE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#434343"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.63"
                android:text="This will securely erase all contacts and messages from the mobile phone."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#606060" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.63"
                android:text="CEEQ NOW"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#434343"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.63"
                android:text="This will retrieve current mobile phone details, last 10 call logs, SIM Number"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#606060" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.63"
                android:text="CEEQ CRY"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#434343"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.63"
                android:text="This will sound a loud alarm on the mobile phone."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#606060" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#434343"
                android:padding="4dp"
                android:text="Device Id"
                android:textColor="#f4f4f4"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:gravity="fill"
                android:text="You may use your device id to see your data online."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#434343" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="Click outside this box to close it."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#f4f4f4" />

</LinearLayout>