<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ee0033"
    android:orientation="vertical"
    android:padding="0dp" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/ic_tab_2"
        android:columnCount="1"
        android:orientation="horizontal" >

        <Space />

        <TextView
            android:id="@+id/textView3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text=" I am Ceeq and You .."
            android:textColor="#ee0033"
            android:textSize="20sp" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="8dp" >

        <Space
            android:layout_width="212dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What&apos;s your name ! Buddy :)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f4f4f4"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Enter Your Name"
            android:inputType="textPersonName"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a Unique Secure PIN"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f4f4f4"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EditText01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Enter Security PIN"
            android:inputType="textPersonName"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I will email you reports @"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f4f4f4"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Enter your Email Address"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:columnCount="1" >

        <Button
            android:id="@+id/next02"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="-8dp"
            android:onClick="switchView"
            android:text="Next" />

        <Button
            android:id="@+id/back02"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="-8dp"
            android:layout_row="0"
            android:onClick="switchView"
            android:text="Back" />
    </GridLayout>

</LinearLayout>