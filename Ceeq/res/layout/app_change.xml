<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Emergency Contact Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#505050"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emergency_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="16sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Emergency Contact Number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#505050"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emergency_contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Emergency Message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#505050"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emergency_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:hint="Hi ! This is YOUR NAME ! I has lost my mobile. Contact me as soon as possible. "
        android:inputType="textMultiLine"
        android:textSize="16sp" />

</LinearLayout>